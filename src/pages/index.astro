---
import {getCollection} from "astro:content";
import {SITE_METADATA, ITEMS_PER_PAGE} from '@/consts';
import RootLayout from "@/layouts/RootLayout.astro";
import Link from "@/components/Link.astro";
import FormattedDate from "@/components/FormattedDate.astro";
import Tag from "@/components/Tag.astro";
import {excludeDrafts, fetchAndSortBlogPosts} from "@/functions";

export const prerender = true;

const posts = await fetchAndSortBlogPosts();
---

<RootLayout title={SITE_METADATA.title} description={SITE_METADATA.description}>
    <div class="section-container animate-fade-in">
        <div class="max-w-4xl mx-auto">
            <!-- Hero Section -->
            <div class="py-16 md:py-24">
                <div class="space-y-6">
                    <p class="section-title">Developer Relations Professional</p>
                    <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold leading-tight">
                        <span class="block">Actualizing</span>
                        <span class="block text-primary-500">Developer Happiness</span>
                    </h1>
                    <p class="text-xl md:text-2xl text-dark-text-secondary max-w-2xl">
                        Creating inclusive and dynamic communities. 
                        Enabling developer success through optimal experiences.
                    </p>
                </div>

                <!-- CTA Buttons -->
                <div class="mt-12 flex flex-wrap gap-4">
                    <a href="/book" class="modern-button-primary modern-button">
                        // New Book
                    </a>
                    <a href="/blog" class="modern-button">
                        // Blog
                    </a>
                    <a href="/talks" class="modern-button">
                        // Talks
                    </a>
                    <a href="/projects" class="modern-button">
                        // Workshops
                    </a>
                </div>

                <!-- Sponsor CTA -->
                <div class="mt-8">
                    <a href="https://github.com/sponsors/hummusonrails" 
                       target="_blank" 
                       class="inline-flex items-center gap-2 text-primary-500 hover:text-primary-400 transition-colors">
                        <span class="text-2xl">⚡</span>
                        <span class="font-medium">Sponsor my work</span>
                    </a>
                </div>
            </div>

            <!-- Quick Info Cards -->
            <div class="grid md:grid-cols-3 gap-6 mt-6">
                <div class="card">
                    <h3 class="text-lg font-semibold mb-2">Focus</h3>
                    <p class="text-dark-text-secondary">
                        Building and scaling developer communities
                    </p>
                </div>
                <div class="card">
                    <h3 class="text-lg font-semibold mb-2">Mission</h3>
                    <p class="text-dark-text-secondary">
                        Enable developer success through optimal DX
                    </p>
                </div>
                <div class="card">
                    <h3 class="text-lg font-semibold mb-2">Impact</h3>
                    <p class="text-dark-text-secondary">
                        Creating inclusive tech communities worldwide
                    </p>
                </div>
            </div>

            <!-- Profile Image Section -->
            <div class="mt-16 relative max-w-3xl mx-auto">
                <div class="card overflow-hidden">
                    <img 
                        class="w-full h-auto object-cover" 
                        src="static/images/new_home_picture.png" 
                        alt="Ben Greenberg"
                    />
                </div>
                <div class="mt-4 text-center">
                    <p class="text-sm text-dark-text-muted font-mono">
                        Mentoring developers at a hacker house
                    </p>
                </div>
            </div>

            <!-- Featured Book Section - Compact -->
            <div class="mt-16">
                <div class="card bg-gradient-to-r from-primary-500/10 to-primary-500/5 border-primary-500/50">
                    <div class="flex flex-col md:flex-row gap-8 items-center">
                        <div class="md:w-48 flex-shrink-0">
                            <img 
                                class="w-full h-auto object-contain shadow-2xl" 
                                src="static/images/book_cover.png" 
                                alt="Vector Search with JavaScript book cover"
                            />
                        </div>
                        <div class="flex-1">
                            <div class="inline-block px-3 py-1 bg-primary-500 text-white text-xs font-bold rounded mb-3">
                                NEW RELEASE
                            </div>
                            <h2 class="text-2xl md:text-3xl font-bold mb-3">Vector Search with JavaScript</h2>
                            <p class="text-dark-text-secondary mb-6">
                                Build AI-powered search systems with JavaScript. Published by The Pragmatic Bookshelf.
                            </p>
                            <div class="flex flex-wrap gap-3">
                                <a href="https://pragprog.com/titles/bgvector/vector-search-with-javascript/" 
                                   target="_blank"
                                   class="modern-button-primary modern-button">
                                    Get the Book
                                </a>
                                <a href="/book" 
                                   class="modern-button">
                                    Learn More →
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</RootLayout>

