---
import Link from "@/components/Link.astro";
import RootLayout from "@/layouts/RootLayout.astro";
---

<RootLayout title="404 - Not Found">
    <div class="section-container animate-fade-in">
        <div class="max-w-3xl mx-auto text-center py-24">
            <!-- 404 Number -->
            <h1 class="text-9xl md:text-[12rem] font-bold text-primary-500 mb-8">
                404
            </h1>
            
            <!-- Message -->
            <div class="space-y-6 mb-12">
                <h2 class="text-3xl md:text-4xl font-bold">
                    Page Not Found
                </h2>
                <p class="text-xl text-dark-text-secondary max-w-xl mx-auto">
                    The page you're looking for doesn't exist or has been moved.
                </p>
            </div>
            
            <!-- Actions -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <Link href="/" class="modern-button-primary modern-button no-underline">
                    Go Home
                </Link>
                <Link href="/blog" class="modern-button no-underline">
                    Visit Blog
                </Link>
            </div>
            
            <!-- Helpful Links -->
            <div class="mt-16 pt-8 border-t border-dark-border">
                <p class="text-sm text-dark-text-muted mb-4">Looking for something specific?</p>
                <div class="flex flex-wrap justify-center gap-4 text-sm">
                    <Link href="/about" class="modern-link">About</Link>
                    <Link href="/book" class="modern-link">Book</Link>
                    <Link href="/talks" class="modern-link">Talks</Link>
                </div>
            </div>
        </div>
    </div>
</RootLayout>

