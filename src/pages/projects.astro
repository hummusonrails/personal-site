---
import ProjectCard from "@/components/ProjectCard.astro";
import RootLayout from "@/layouts/RootLayout.astro";
import {SITE_METADATA} from '@/consts';

const workshopsData = [
    {
        title: 'Vector Search Workshop with Node.js',
        description: `Workshop on building a vector search engine with Node.js`,
        github_link: 'https://github.com/hummusonrails/vector-search-nodejs-workshop',
    },
    {
        title: 'X402 Demo on Arbitrum',
        description: `Demonstration of the Google AP2 protocol and the x402 standard`,
        github_link: 'https://github.com/hummusonrails/x402-demo-arbitrum',
    },
    {
        title: 'Prisoner\'s Dilemma Workshop - Arbitrum',
        description: `Interactive workshop exploring game theory concepts onchain`,
        github_link: 'https://github.com/hummusonrails/arbitrum-prisoners-dilemma-workshop',
    },
    {
        title: 'Arbitrum Developer Tooling Workshop',
        description: `Hands-on workshop covering essential developer tooling for smart contracts`,
        github_link: 'https://github.com/hummusonrails/arbitrum-devtooling-workshop',
    },
    {
        title: 'Stylus Workshop: Game of Life',
        description: `Build Conway's Game of Life using Rust and deployed to Arbitrum Stylus`,
        github_link: 'https://github.com/hummusonrails/stylus-workshop-gol',
    },
    {
        title: 'WasmCloud Workshop',
        description: `Get started with wasmCloud, an orchestrator for WebAssembly`,
        github_link: 'https://github.com/hummusonrails/wasmcloud-workshop-wasmio',
    },
    {
        title: 'Couchbase Capella with Terraform',
        description: `Infrastructure as code example for Couchbase Capella deployment`,
        github_link: 'https://github.com/hummusonrails/couchbase-capella-terraform-example',
    },
]
---

<RootLayout title={SITE_METADATA.title} description={SITE_METADATA.description}>
    <div class="section-container animate-fade-in">
        <div class="max-w-6xl mx-auto">
            <div class="mb-12">
                <p class="section-title">Learning</p>
                <h1 class="text-4xl md:text-5xl font-bold mb-6">
                    Developer <span class="text-primary-500">Workshops</span>
                </h1>
                <p class="text-xl text-dark-text-secondary max-w-2xl">
                    Hands-on workshops and tutorials for developers.
                </p>
            </div>

            <!-- Workshops Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {workshopsData.map((project) => (
                    <div class="card group flex flex-col">
                        <h3 class="text-xl font-semibold mb-3 group-hover:text-primary-500 transition-colors">
                            {project.title}
                        </h3>
                        <p class="text-dark-text-secondary mb-6 line-clamp-2">
                            {project.description}
                        </p>
                        <div class="mt-auto pt-4">
                            <a href={project.github_link} 
                               target="_blank"
                               class="text-sm text-primary-500 hover:text-primary-400 transition-colors font-medium">
                                View Workshop â†’
                            </a>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>
</RootLayout>