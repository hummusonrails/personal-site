---
interface Astro {
    presentation: string;
    conference: string;
    region: string;
    date: string;
    image?: string;
    link?: string;
}

const {presentation, conference, region, date, image, link} = Astro.props;
---

<tr class="hover:bg-dark-surface/50 transition-colors">
    <td class="px-6 py-4">
        <div class="flex items-center gap-4">
            <div class="h-10 w-10 rounded-lg overflow-hidden border border-dark-border flex-shrink-0">
                <img class="h-full w-full object-cover" src={image || "/placeholder.svg"} alt="" />
            </div>
            <div class="font-medium text-white">
                {presentation}
            </div>
        </div>
    </td>
    
    <td class="px-6 py-4 text-dark-text-secondary">
        {conference}
    </td>

    <td class="px-6 py-4">
        <span class="tag">
            {region}
        </span>
    </td>

    <td class="px-6 py-4 text-dark-text-secondary font-mono text-sm">
        {date}
    </td>

    <td class="px-6 py-4 text-right">
        <a href={link} class="text-[var(--text-primary)] hover:text-[var(--text-primary)] transition-colors font-medium text-sm" target="_blank" rel="noopener noreferrer">
            Watch ->
        </a>
    </td>
</tr>
