---
import type {Page} from "astro:content";

import Link from "./Link.astro";

type Props = Page;

const {page: {currentPage, lastPage, url: {prev, next}}} = Astro.props;
---

<nav class="flex items-center justify-between py-6">
    {!prev && (
        <button class="modern-button opacity-50 cursor-not-allowed" disabled>
            ← Previous
        </button>
    )}
    {prev && (
        <Link href={prev} rel="prev" class="modern-button no-underline">
            ← Previous
        </Link>
    )}
    
    <span class="text-sm text-dark-text-muted font-mono">
        Page {currentPage} of {lastPage}
    </span>
    
    {!next && (
        <button class="modern-button opacity-50 cursor-not-allowed" disabled>
            Next →
        </button>
    )}
    {next && (
        <Link href={next} rel="next" class="modern-button no-underline">
            Next →
        </Link>
    )}
</nav>
